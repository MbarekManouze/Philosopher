NAME = philo
CC = gcc
CFLAGS = -Wall -Wextra -Werror
SRCS = main.c nothing.c utils.c initializing.c libft_utils.c \

OBJ = $(SRCS:.c=.o)

all : $(NAME)

$(NAME) : $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean :
	rm -f $(OBJ)

fclean : clean
	rm -f $(NAME)
re : fclean all

.PHONY : clean all fclean re bonus